{
    "openapi": "3.0.0",
    "info": {
        "title": "Documentation with Swagger",
        "description": "This is an user API",
        "version": "1.0.0",
        "contact": {
            "email": "rofbasso@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Rodrigo Basso",
                                    "email": "email@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Email already exist"
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get users",
                "description": "Get all users",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "required": "true",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "example": {
                            "user_id": "cac4c659-397e-486a-b817-d3c1e87c4250"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User not found/ User is not admin"
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get user by ID",
                "description": "Return user information",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": "true",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "example": {
                            "user_id": "cac4c659-397e-486a-b817-d3c1e87c4250"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "User"
                ],
                "summary": "Change user account to administrator type",
                "description": "Change user account to administrator type",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": "true",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "example": {
                            "user_id": "cac4c659-397e-486a-b817-d3c1e87c4250"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Changed user"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    }
}